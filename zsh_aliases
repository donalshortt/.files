alias v="nvim ${1}"
alias lc="nvim leetcode.nvim"
alias c="z ${1}"
alias c-="cd -"
alias open="xdg-open ${1}"
alias sd="shutdown -h 0"
alias gdb="gdb -q"
alias clip="xclip -selection clipboard"
alias ws="wormhole send ${1}"
alias wr="wormhole recieve ${1}"
alias bc="better-commits"
alias pe="pet exec"
alias gs="gh copilot suggest -s"
alias ge="gh copilot explain"
alias sysup="sudo pacman -Syu"
alias gu="gaa; gc -m \"latest\"; gp"
alias cr="RUST_BACKTRACE=1 cargo run"
alias cl="cargo clippy --all-targets --all-features -- -D warnings"
alias sail="[ -f sail ] && bash sail || bash vendor/bin/sail"
alias sev="sudo systemctl start evremap.service"
alias stev="sudo systemctl stop evremap.service"
alias ye="yay -Sy --noconfirm ${2}"
alias cc="sail artisan config:clear && sail artisan config:cache"
alias icat="kitten icat ${1}"
alias rr="evcxr"
alias wtf="sail artisan optimize:clear && sail artisan route:clear && sail artisan config:clear && sail artisan view:clear && sail artisan cache:clear && sail composer dump-autoload"
alias bat="bat --paging=never ${1}"

# Git aliases
alias gtc="git log -- ${1}"
